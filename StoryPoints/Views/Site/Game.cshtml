
@{
    ViewBag.Title = "Story Points";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-2 players-col">
        <h5>Players</h5>
        <div class="row">
            <div class="col-md-12">
                <ul id="players"></ul>
            </div>
        </div>
    </div>

    <div class="col-md-10 game-col">
        <div class="row mod-row mod hidden">
            <div class="col-md-12">
                <button id="flip" class="btn btn-primary">Flip</button>
                <button id="reset" class="btn btn-warning">Reset</button>
                <button id="save" class="btn btn-success integration hidden">Save</button>
                <button id="settings" class="btn btn-default">settings</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 score-col">
                <div>Score <span class="mod hidden"><span class="glyphicon glyphicon-pencil pull-right"></span><span class="glyphicon glyphicon-ok pull-right hidden"></span></span></div>
                <div id="score">-</div>
                <input type="number" min="0" id="scoreEdit" class="hidden"/>
                <div id="score2"></div>
            </div>
            <div class="col-md-10 card-options-col">
                <div id="card-options">                    
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div id="game-board"></div>
            </div>
        </div>
    </div>
</div>

<div id="nameModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Welcome to Story Points!</h4>
            </div>
            <div class="modal-body">
                <p>Please Enter Your Name</p>
                <p><input id="name" type="text" /></p>
            </div>
            <div class="modal-footer">
                <button type="button" id="nameModalOk" class="btn btn-success">Ok</button>
            </div>
        </div>
    </div>
</div>

<div id="settingsModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Settings</h4>
            </div>
            <div class="modal-body">
                <h4>Deck</h4>
                <div id="cardsInPlay"></div>
                <div class="hidden">
                    <hr />
                    <h4>Deck</h4>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<link href="~/Content/game.css" rel="stylesheet" type="text/css" />
<script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
<script src="/signalr/hubs"></script>
<script src="~/Scripts/game.js"></script>
